// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id        String    @id @default(cuid())
  phone     String    @unique
  username  String
  password  String
  role      String    @default("CLIENT") // ADMIN, CLIENT
  photo     String?
  address   Address?  @relation(fields: [addressId], references: [id])
  addressId String?   @unique
  orders    Order[]
  ratings   Rating[]
  questions Question[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Address {
  id           String @id @default(cuid())
  city         String @default("Addis Ababa")
  subcity      String @default("Bole")
  neighborhood String
  user         User?
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  products Product[] @relation("ProductToCategory")
}

model Product {
  id          String         @id @default(cuid())
  name        String
  description String         @db.Text
  basePrice   Decimal        @db.Decimal(10, 2)
  images      ProductImage[]
  categories  Category[]     @relation("ProductToCategory")
  variations  Variation[]
  ratings     Rating[]
  questions   Question[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  orderItems  OrderItem[]
}

model ProductImage {
  id        String  @id @default(cuid())
  url       String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
}

model Variation {
  id              String      @id @default(cuid())
  size            String?
  color           String?
  quantity        Int         @default(0)
  additionalPrice Decimal     @default(0) @db.Decimal(10, 2)
  product         Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId       String
  orderItems      OrderItem[]
}

model Rating {
  id        String   @id @default(cuid())
  stars     Int
  comment   String?  @db.Text
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  createdAt DateTime @default(now())
}

model Question {
  id        String   @id @default(cuid())
  text      String   @db.Text
  answer    String?  @db.Text
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  createdAt DateTime @default(now())
}

model Order {
  id            String      @id @default(cuid())
  user          User?       @relation(fields: [userId], references: [id])
  userId        String?
  totalPrice    Decimal     @default(0) @db.Decimal(10, 2)
  shippingCost  Decimal     @default(0) @db.Decimal(10, 2)
  taxCost       Decimal     @default(0) @db.Decimal(10, 2)
  totalQuantity Int         @default(0)
  status        String      @default("NOT_DELIVERED") // NOT_DELIVERED, ON_DELIVERY, DELIVERED, RETURNED
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  items         OrderItem[]
}

model OrderItem {
  id          String     @id @default(cuid())
  order       Order      @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId     String
  product     Product    @relation(fields: [productId], references: [id])
  productId   String
  variation   Variation? @relation(fields: [variationId], references: [id])
  variationId String?
  quantity    Int
  price       Decimal    @db.Decimal(10, 2)
}

model Hero {
  id        String   @id @default(cuid())
  title     String
  subtitle  String?
  imageUrl  String?
  linkText  String?  @default("Shop Now")
  linkUrl   String?  @default("/shop")
  badgeText String?
  badgePrice String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

